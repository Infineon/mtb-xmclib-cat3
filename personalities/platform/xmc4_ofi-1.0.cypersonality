<Personality id="xmc4_ofi" name="OFI" version="1.0" xmlns="http://cypress.com/xsd/cyhwpersonality_v3">
  <Dependencies>
    <IpBlock name="xmc4_scu" />
    <Resource name="scu\.clock\.osc_fi" />
  </Dependencies>
  <ExposedMembers>
    <ExposedMember key="frequency" paramId="fOFI" />
  </ExposedMembers>

  <Parameters>
    <!-- General -->
    <ParamChoice id="calibration_mode" name="Calibration" group="General"
      default="XMC_SCU_CLOCK_FOFI_CALIBRATION_MODE_FACTORY" visible="true" editable="true" desc="Select calibration mode of the internal fast oscillator." >
      <Entry name="Factory calibration" value="XMC_SCU_CLOCK_FOFI_CALIBRATION_MODE_FACTORY" visible="true" />
      <Entry name="Automatic calibration using standby clock" value="XMC_SCU_CLOCK_FOFI_CALIBRATION_MODE_AUTOMATIC" visible="true" />
    </ParamChoice>
    <ParamString id="fOFI" name="Frequency (Hz)" group="Internal"
      default="24000000" visible="false" editable="false" desc="" />
    <ParamRange id="frequency_info" name="Frequency (MHz)" group="General"
      default="`${(fOFI / 1000000.0)}`" min="24" max="24" resolution="0.001"
      visible="true" editable="false" desc="Internal fast oscillator frequency in MHz." />
  </Parameters>

  <ConfigFirmware>
    <ConfigDefine name="CLOCK_FOFI_CALIBRATION_MODE" value="`${calibration_mode}`" public="false" include="true" />
  </ConfigFirmware>
</Personality>
